{
  "name": "@caffeine/application",
  "type": "module",
  "author": {
    "name": "Alan Reis",
    "email": "alanreisanjo@gmail.com",
    "url": "https://hoyasumii.dev"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*/index.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": {
      "types": "./dist/*/index.d.ts",
      "import": "./dist/*/index.js",
      "require": "./dist/*/index.cjs"
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@faker-js/faker": "^10.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "tsup": "^8.5.1",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@caffeine/constants": "link:@caffeine/constants",
    "@caffeine/models": "link:@caffeine/models",
    "@caffeine/errors": "link:@caffeine/errors",
    "@caffeine/entity": "link:@caffeine/entity",
    "@caffeine/domain": "link:@caffeine/domain"
  },
  "scripts": {
    "build": "tsup 'src/**/index.ts' --format cjs,esm --dts --tsconfig tsconfig.build.json --clean",
    "test:unit": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "setup": "bun run build && bun link"
  }
}